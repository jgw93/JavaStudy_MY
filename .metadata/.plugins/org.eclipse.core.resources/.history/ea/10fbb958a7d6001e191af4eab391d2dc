package ex_240229;

import java.util.Iterator;
import java.util.Scanner;

public class Ex_3_for {

	public static void main(String[] args) {
		while (true) {
			Scanner scanner = new Scanner(System.in);
			System.out.println("입력한 수 n 까지 더하는 프로그램, 숫자를 입력해주세요, exit 입력시 종료>>");
			int number = scanner.nextInt();
			int result = sumN(number);
			String exitStatusString = null;
			if (exitStatusString.equals("exit")) {
				break;
			}
			System.out.println("결과는 : " + result);
		}

	}

	// 입력한 수 n 까지 더하는 프로그램 만들기 " 1+2+3+...+n
	public static int sumN(int number) {
		// 초기값, 합의 값을 할당.
		int i, sum = 0;
		for (i = 0; i <= number; i++) {
			sum += i;
		}
		return sum;

	}

}
