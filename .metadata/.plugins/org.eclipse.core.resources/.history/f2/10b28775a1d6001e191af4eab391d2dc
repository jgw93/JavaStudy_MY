package ex_240229;

public class Ex_2_swich {

	public static void main(String[] args) {
		

	}
	// 날씨에 따라 메뉴를 정해주는 프로그램 만들기.
	public static String picLunchMenuWeather(String weatherStatus) {
		switch (weatherStatus) {
		case "맑음":
			String menuString = "된장찌개";
			return menuString;
			break;
		case "흐림":
			String menuString2 = "칼국수";
			return menuString2;
			break;
		case "비":
			String menuString3 = "우동";
			return menuString3;
			break;

		default:
			String menuString4 = "국밥";
			return menuString4;
			break;
		}
		
	}
	

}
